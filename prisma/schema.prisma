generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Criminoso {
  id_criminoso   Int      @id @default(autoincrement())
  nome           String
  data_nascimento DateTime
 
 @@map("criminoso") 

 }

model Crime {
  id_crime       Int      @id @default(autoincrement())
  id_criminoso   Int
  descricao       String
  data_crime     DateTime

   @@map("crime") 
}

model Arma {
  id_arma        Int      @id @default(autoincrement())
  id_crime       Int
  tipo           String
  numero_serie   String
 
  @@map("arma") 
}
